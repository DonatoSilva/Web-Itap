---
interface Props {
    title?: string;
    accion?: Function;
    direction?: string;
}

const { accion, direction = "", title } = Astro.props;

// diccionario de rotacion
const keyRotate = {
    right: "rotate-180",
};

let valorDirection = "";

if (direction.length > 3) {
    valorDirection = keyRotate[direction];
}
---

<button
    class="p-3 bg-[#358d36] text-white rounded-full border mx-0.5 my-auto cursor-pointer"
    title={`${title}`}
>
    <svg
        class={valorDirection}
        width="16"
        height="16"
        fill="currentColor"
        class="bi bi-caret-left-fill"
        viewBox="0 0 16 16"
    >
        <path
            d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z"
        ></path>
    </svg>
</button>
