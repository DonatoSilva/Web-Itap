---
import { ViewTransitions } from "astro:transitions";
import "@fontsource/lato";

interface Props {
	title: string;
	optActive: string;
	textLabelTop: string;
}

const { title, optActive, textLabelTop } = Astro.props;

import Foother from "./Foother.astro";
import Menu from "./Menu.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Icono.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - ITAP</title>
		<script
			is:raw
			src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
			>
		</script>
		<ViewTransitions />
	</head>
	<body>
		<Menu active={optActive} textLabelTop={textLabelTop} />
		<slot/>
		<Foother />
	</body>
	<style is:global>
		html {
			font-family: "Lato", sans-serif;
			background: #f9fafc;
			overflow-x: hidden;
		}

		@keyframes animateShow {
		0% {
			opacity: 0;
			scale: 25%;
		}
		50% {
			opacity: 0.7;
			scale: 75%%;
		}
		100% {
			opacity: 1;
			scale: 100%;
		}
	}
	</style>
</html>
